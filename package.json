{
  "name": "matterbridge",
  "version": "1.0.3",
  "description": "Matterbridge",
  "author": "https://github.com/Luligu",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luligu/matterbridge"
  },
  "bugs": {
    "url": "https://github.com/Luligu/matterbridge/issues"
  },
  "keywords": [
    "matterbridge",
    "homebridge",
    "matter",
    "matter.js"
  ],
  "engines": {
    "node": "^18.19.0 || ^20.11.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node ./dist/index.js -bridge",
    "start:help": "node ./dist/index.js -help",
    "start:add": "node ./dist/index.js -add ../matterbridge-example",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint src/**.ts",
    "lint:fix": "eslint src/**.ts --fix",
    "clean": "rimraf tsconfig.tsbuildinfo ./dist",
    "cleanBuild": "npm run clean && tsc",
    "deepClean": "rimraf tsconfig.tsbuildinfo package-lock.json ./dist ./node_modules",
    "prepublishOnly": "npm run lint && npm run cleanBuild",
    "checkDependencies": "npx npm-check-updates",
    "updateDependencies": "npx npm-check-updates -u",
    "updateMatter": "npm install @project-chip/matter.js@dev && npm install @project-chip/matter-node.js@dev && npm install @project-chip/matter.js-tools@dev && npm install @project-chip/matter-node-ble.js@dev"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^1.6.2",
    "@tsconfig/node-lts": "^20.1.1",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@project-chip/matter-node-ble.js": "^0.7.5",
    "@project-chip/matter-node.js": "^0.7.5",
    "@project-chip/matter.js": "^0.7.5",
    "@project-chip/matter.js-tools": "^0.7.5",
    "node-ansi-logger": "^1.9.1",
    "node-persist-manager": "^1.0.3"
  }
}
