# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ BUILD STAGE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM node:22-bookworm-slim AS builder

# ğŸ› ï¸ Set noninteractive frontend
ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app
COPY ./package*.json ./tsconfig*.json ./.npmignore ./
COPY ./src ./src
COPY ./frontend/package.json ./frontend/package.json
COPY ./frontend/build ./frontend/build
COPY ./bin ./bin

COPY ./packages/dgram/package*.json ./packages/dgram/tsconfig*.json ./packages/dgram/.npmignore ./packages/dgram/
COPY ./packages/dgram/src ./packages/dgram/src

COPY ./packages/jest-utils/package*.json ./packages/jest-utils/tsconfig*.json ./packages/jest-utils/.npmignore ./packages/jest-utils/
COPY ./packages/jest-utils/src ./packages/jest-utils/src

COPY ./packages/utils/package*.json ./packages/utils/tsconfig*.json ./packages/utils/.npmignore ./packages/utils/
COPY ./packages/utils/src ./packages/utils/src

COPY ./packages/vitest-utils/package*.json ./packages/vitest-utils/tsconfig*.json ./packages/vitest-utils/.npmignore ./packages/vitest-utils/
COPY ./packages/vitest-utils/src ./packages/vitest-utils/src

# COPY ./vendor ./vendor

RUN npm ci --no-fund --no-audit && \
  npm run buildProduction && \
  npm pkg delete devDependencies scripts && \
  rm -rf ./node_modules && \
  npm install --no-fund --no-audit --omit=dev && \
  npm shrinkwrap --omit=dev && \
  npm pack 

# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ RUNTIME STAGE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
FROM node:22-bookworm-slim AS release

# ğŸ› ï¸ Set noninteractive frontend
ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /matterbridge
COPY --from=builder /app/*.tgz .

RUN apt-get update && \
  apt-get install -y --no-install-recommends curl && \
  apt-get clean && \
  npm install --global --no-fund --no-audit --omit=dev \
  *.tgz \
  matterbridge-zigbee2mqtt \
  matterbridge-somfy-tahoma \
  matterbridge-shelly \
  matterbridge-hass \
  matterbridge-webhooks \
  matterbridge-test \
  matterbridge-example-accessory-platform \
  matterbridge-example-dynamic-platform \
  matterbridge-eve-door \
  matterbridge-eve-motion \
  matterbridge-eve-energy \
  matterbridge-eve-room \
  matterbridge-eve-weather && \
  npm uninstall -g corepack && \
  npm cache clean --force && \
  rm *.tgz && \
  rm -rf /tmp/* /var/tmp/* /root/.npm /root/.cache /var/lib/apt/lists/* && \
  find /usr/local/lib/node_modules -type d -name ".github" -exec rm -rf {} + && \
  find /usr/local/lib/node_modules -type d -name ".vscode" -exec rm -rf {} + && \
  find /usr/local/lib/node_modules -type d -name "docs" -exec rm -rf {} + && \
  find /usr/local/lib/node_modules -type f \( -name "*.ts" -o -name "*.js.map" -o -name "*.d.ts" -o -name "*.d.ts.map" -o -name "LICENSE" -o -name "LICENSE.txt" -o -name "*.md" \) -delete && \
  find /usr/local/lib/node_modules/matterbridge/node_modules/@matter -type d -name "src" -exec rm -rf {} + && \
  find /usr/local/lib/node_modules/matterbridge/node_modules/@matter -type d -name "cjs" -exec rm -rf {} +

# Add Docker HEALTHCHECK
HEALTHCHECK --interval=60s --timeout=10s --start-period=60s --retries=5 \
  CMD curl --fail http://localhost:8283/health || exit 1

# Copy and execute the entrypoint script
COPY ./docker/entrypoint.debian.sh ./
RUN chmod +x ./entrypoint.debian.sh
ENTRYPOINT ["./entrypoint.debian.sh"]
CMD ["matterbridge", "-docker"]
