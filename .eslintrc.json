{
    "plugins": [
        "@typescript-eslint",
        "@stylistic"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended" 
      ],
    "rules": {
        "@stylistic/indent": ["error", 2],
        "max-len": ["warn", 180],
        "no-console": ["warn"]
      }
}
